<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context="com.acercow.oneday.splash.SplashActivity">

    <TextView
        android:id="@+id/tv_timer_countdown"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/splash_timer_background"
        android:gravity="center"
        android:text="100"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/splash_app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="OneDay"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="40dp" />

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/splash_app_name_text"
        android:layout_toLeftOf="@+id/splash_app_name_text"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_circle_color_primary" />

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/splash_app_name_text"
        android:layout_toRightOf="@+id/splash_app_name_text"
        android:background="@drawable/shape_circle_color_primary" />

</RelativeLayout>
