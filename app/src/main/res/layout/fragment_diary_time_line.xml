<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context="com.acercow.oneday.note.timeline.TimelineFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    <RelativeLayout
        android:id="@+id/note_list_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/note_list_empty_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/note_list_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:text="@string/empty_note_text"
            android:layout_below="@id/note_list_empty_img"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
