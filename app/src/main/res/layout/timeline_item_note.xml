<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@android:color/darker_gray" />
        <View
            android:id="@+id/timeline_node"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.2dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_circle_color_primary" />
    </RelativeLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_card_item"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/list_item_time_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/timestamp_day"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="15"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/timestamp_month"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/timestamp_day"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/timestamp_day"
                android:text="Feb"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/timestamp_year"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/timestamp_day"
                android:layout_alignLeft="@id/timestamp_month"
                android:text="2018"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/timestamp_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="22dp"
                android:textColor="@color/colorBlue"
                android:textSize="12sp"
                android:text="星期日"

                />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/list_item_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/note_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="30dp"
                    android:text="Lorem Ipsum"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="30dp"
                    android:maxLines="2"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>